<div class="form-new">
  <div class="input-form">
    <p style="color: green"><%= notice %></p>

    <h1><%= t('common.new')%></h1>

    <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= t('products.imagen') %></th>
        <th scope="col"><%= t('products.title') %></th>
        <th scope="col"><%= t('products.description') %></th>
      </tr>
      <tbody>
          <% @products.each do |product| %>
          <tr>
            <div id="<%= dom_id product %>">
            <td> <%= product.imagen %></td>
            <td><%= product.title %></td>
            <td><%= product.description %></td>
            <td> <%= link_to t('common.show'), product %> </td>
          </tr>
          <% end %>
      </tbody>
      </div>
    </table>


    <%= link_to t('common.new'), new_product_path%>

  </div>
</div>